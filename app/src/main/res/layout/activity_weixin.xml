<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo_sj"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_below="@+id/logo"
        android:src="@drawable/title"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/wechat_login"
        android:background="@drawable/shape_weixinlogin"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/btn_weixin"
            android:drawableLeft="@drawable/wechat"
            android:drawablePadding="10px"
            android:text="微信登录"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:text="点击微信登录按钮直接登录"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/wechat_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="@drawable/signin_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.zhy.autolayout.AutoRelativeLayout>