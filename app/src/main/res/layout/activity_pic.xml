<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdtc.sjjms.ui.PicActivity">

    <com.gdtc.sjjms.widget.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_image"
                android:scaleType="fitStart"
                android:src="@drawable/icon_big_pic_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_alignTop="@+id/iv_image"
                android:layout_marginTop="60px"
                android:layout_marginLeft="40px"
                android:src="@mipmap/find_back_black"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:textSize="@dimen/font_size_big"
                android:textColor="@color/black"
                android:id="@+id/seller_name"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:layout_below="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/font_size_big"
                android:textColor="@color/red"
                android:id="@+id/seller_price"
                android:layout_below="@+id/seller_name"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/gary"
                android:id="@+id/seller_stroy"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.gdtc.sjjms.widget.CustomScrollView>

</com.zhy.autolayout.AutoRelativeLayout>
